<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.marcos.angel.izidraw.DrawingView
        android:id="@+id/drawingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnVista"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:shadowColor="@android:color/background_dark"
        android:textColor="@android:color/background_dark"
        android:background="@drawable/ic_create"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDelete1"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:shadowColor="@android:color/background_dark"
        android:textColor="@android:color/background_dark"
        android:background="@drawable/ic_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDelete2"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginEnd="46dp"
        android:layout_marginRight="46dp"
        android:layout_marginTop="46dp"
        android:shadowColor="@android:color/background_dark"
        android:textColor="@android:color/background_dark"
        android:background="@drawable/ic_delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDelete3"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:shadowColor="@android:color/background_dark"
        android:textColor="@android:color/background_dark"
        android:background="@drawable/ic_delete_sweep"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--<Button
        android:id="@+id/btnIsometrico"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="46dp"
        android:shadowColor="@android:color/background_dark"
